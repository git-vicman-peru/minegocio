<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clickable="true"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/semiTransparent"
            android:gravity="center"
            android:layout_weight="0.1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btnfaceround"
                android:textStyle="bold"
                android:textSize="15dp"
                android:gravity="center"
                android:padding="12dp"
                android:text="HACER PEDIDO  paso : 1 / 2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/backtransroundhalf"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="0.8">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="Fecha:"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:hint="Fecha del Pedido"
                android:textIsSelectable="true"
                android:id="@+id/txPedFechaPedido"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:textSize="14dp"
                android:text="Cliente:" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:hint="Datos del cliente"
                android:textIsSelectable="true"
                android:id="@+id/txPedCliente"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:textSize="14dp"
                android:text="Fecha de entrega:"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:textAlignment="center"
                android:textIsSelectable="true"
                android:hint="Fecha de entrega"
                android:id="@+id/txPedFechaEntrega"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:textSize="14dp"
                android:text="Telefono:"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:textAlignment="center"
                android:textIsSelectable="true"
                android:hint="Telefono"
                android:id="@+id/txPedFono"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:paddingTop="5dp"
                android:text="Direccion de entrega:"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:textAlignment="center"
                android:hint="Direccion de entrega"
                android:textIsSelectable="true"
                android:id="@+id/txPedDirecEntrega"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:paddingTop="5dp"
                android:text="Correo:"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textAlignment="center"
                android:hint="Correo electronico"
                android:textIsSelectable="true"
                android:id="@+id/txPedCorreo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:paddingTop="5dp"
                android:text="Observaciones:"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textAlignment="center"
                android:hint="Observaciones"
                android:textIsSelectable="true"
                android:id="@+id/txPedObs"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="0.1">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15">
                <Button
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:background="@drawable/goleft"
                    android:id="@+id/bnPedSendPrev"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.55">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/buttonface"
                    android:text="Cancelar"
                    android:visibility="invisible"
                    android:id="@+id/bnPedSendCancel"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:gravity="right|center">
                <Button
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:background="@drawable/goright"
                    android:id="@+id/bnPedSendNext"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
