<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_overlay"
        android:alpha="0.8"
        android:clickable="true"
        android:orientation="vertical"
        android:weightSum="1"
        android:id="@+id/llyBlogIt">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/commentmedium"
            android:orientation="horizontal"
            android:scaleX="0.96"
            android:scaleY="1"
            android:gravity="center"
            android:layout_weight="0.4">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="0.8"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:textAlignment="center"
                        android:text="Publicar"
                        android:background="@drawable/buttonface"
                        android:id="@+id/bnBlogPublish"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textMultiLine"
                        android:padding="5dp"
                        android:layout_margin="16dp"
                        android:textSize="20dp"
                        android:background="@color/colorWhite"
                        android:lines="10"
                        android:hint="Escriba su comentario aqui"
                        android:textIsSelectable="true"
                        android:id="@+id/txBlogIt"
                        android:scrollbars="vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:orientation="horizontal"
                    android:layout_margin="2dp"
                    android:weightSum="1">
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="right|bottom"
                        android:layout_weight="0.8">
                        <Button
                            android:layout_width="50dp"
                            android:layout_height="45dp"
                            android:padding="3dp"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:background="@drawable/starnone"
                            android:id="@+id/bnBlogStar1"/>
                        <Button
                            android:layout_width="50dp"
                            android:layout_height="45dp"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:background="@drawable/starnone"
                            android:id="@+id/bnBlogStar2"/>
                        <Button
                            android:layout_width="50dp"
                            android:layout_height="45dp"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:background="@drawable/starnone"
                            android:id="@+id/bnBlogStar3"/>
                        <Button
                            android:layout_width="50dp"
                            android:layout_height="45dp"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:background="@drawable/starnone"
                            android:id="@+id/bnBlogStar4"/>
                        <Button
                            android:layout_width="50dp"
                            android:layout_height="45dp"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:background="@drawable/starnone"
                            android:id="@+id/bnBlogStar5"/>
                    </LinearLayout>

                </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</FrameLayout>