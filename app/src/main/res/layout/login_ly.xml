<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:clickable="true"
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical"
        android:layout_weight="0.33">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="0.33">
            <LinearLayout
                android:layout_width="286dp"
                android:layout_height="356dp"
                android:background="@drawable/dlgbackground"
                android:gravity="center_horizontal"
                android:layout_margin="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:paddingTop="95dp"
                    android:id="@+id/lyLoginBase">
                    <TextView
                        android:text="Usuario/Nick"
                        android:layout_width="110dp"
                        android:layout_height="20dp"
                        android:background="@drawable/tab"
                        android:layout_marginLeft="12dp"
                        android:gravity="center"
                        android:id="@+id/lbLoginUsuario" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/textboxbackshadow">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="textPersonName"
                            android:paddingLeft="17dp"
                            android:text=""
                            android:textSize="15dp"
                            android:id="@+id/txLoginUsuario"
                            android:textIsSelectable="true"
                            android:editable="true" />
                    </LinearLayout>
                    <TextView
                        android:text="Clave"
                        android:layout_width="90dp"
                        android:layout_height="20dp"
                        android:background="@drawable/tab"
                        android:layout_marginLeft="12dp"
                        android:gravity="center"
                        android:id="@+id/lbLoginClave" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/textboxbackshadow">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="textPassword"
                            android:paddingLeft="17dp"
                            android:textSize="15dp"
                            android:id="@+id/txLoginClave"
                            android:textIsSelectable="true"
                            android:editable="true"
                            android:password="true" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:gravity="center">
                        <Button
                            android:layout_height="wrap_content"
                            android:id="@+id/bnLoginOk"
                            android:text="Ingresar"
                            android:background="@drawable/buttonface"
                            android:layout_width="110dp"
                            android:gravity="center" />
                        <Button
                            android:layout_width="54dp"
                            android:layout_height="52dp"
                            android:background="@drawable/goback"
                            android:id="@+id/bnLoginCancel"
                            android:text=""
                            android:layout_marginLeft="15dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_weight="0.33" />
</FrameLayout>
