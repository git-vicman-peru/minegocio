<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fotoframe">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="32dp"
            android:clickable="true"
            android:weightSum="1">
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.02"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.88">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:id="@+id/lyBnRegistrar">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="0.7">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:textSize="19dp"
                                android:id="@+id/lbClieNombres"
                                android:text="Nombres" />
                            <EditText
                                android:layout_width="232dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:background="@color/black_overlay"
                                android:inputType="textPersonName"
                                android:textSize="19dp"
                                android:id="@+id/txClieNombres"
                                android:textColorHint="@color/colorWhite"
                                android:textIsSelectable="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="10dp"
                                android:textColor="@color/colorWhite"
                                android:textSize="19dp"
                                android:id="@+id/lbClieAlias"
                                android:text="Alias / Nick" />
                            <EditText
                                android:layout_width="232dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:background="@color/black_overlay"
                                android:inputType="textPersonName"
                                android:textSize="19dp"
                                android:id="@+id/txClieAlias"
                                android:textColorHint="@color/colorWhite"
                                android:textIsSelectable="true" />



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="10dp"
                                android:textColor="@color/colorWhite"
                                android:textSize="19dp"
                                android:id="@+id/lbClieApellidos"
                                android:text="Apellidos" />
                            <EditText
                                android:layout_width="264dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:background="@color/black_overlay"
                                android:inputType="textPersonName"
                                android:textSize="19dp"
                                android:id="@+id/txClieApellidos"
                                android:textColorHint="@color/colorWhite"
                                android:textIsSelectable="true" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="0.3">
                            <mobapp.vic.components.RoundedImageView
                                android:layout_width="match_parent"
                                android:layout_height="114dp"
                                android:src="@drawable/noimage"
                                android:clickable="true"
                                android:layout_marginTop="10dp"
                                android:id="@+id/imgClientFoto"/>
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:textColor="@color/colorWhite"
                        android:textSize="19dp"
                        android:id="@+id/lbClieFechaNac"
                        android:text="FechaNacimiento (dd/mm/aaaa)" />
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:background="@color/black_overlay"
                        android:inputType="date"
                        android:ems="8"
                        android:textSize="19dp"
                        android:id="@+id/txClieFechaNac"
                        android:textColorHint="@color/colorWhite"
                        android:textIsSelectable="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:textColor="@color/colorWhite"
                        android:textSize="19dp"
                        android:id="@+id/lbClieDirec"
                        android:text="Direccion" />
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:background="@color/black_overlay"
                        android:inputType="textPostalAddress"
                        android:ems="14"
                        android:textSize="19dp"
                        android:id="@+id/txClieDirec"
                        android:textColorHint="@color/colorWhite"
                        android:textIsSelectable="true" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:textColor="@color/colorWhite"
                        android:textSize="19dp"
                        android:id="@+id/lbClieZona"
                        android:text="Zona / Distrito" />
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:background="@color/black_overlay"
                        android:inputType="text"
                        android:ems="13"
                        android:textSize="19dp"
                        android:id="@+id/txClieZona"
                        android:textColorHint="@color/colorWhite"
                        android:textIsSelectable="true" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:textColor="@color/colorWhite"
                        android:textSize="19dp"
                        android:id="@+id/lbClieCiudad"
                        android:text="Ciudad" />
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:background="@color/black_overlay"
                        android:inputType="text"
                        android:ems="10"
                        android:textSize="19dp"
                        android:id="@+id/txClieCiudad"
                        android:textColorHint="@color/colorWhite"
                        android:textIsSelectable="true" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="15dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="10dp"
                                android:textColor="@color/colorWhite"
                                android:textSize="19dp"
                                android:id="@+id/lbClieDni"
                                android:text="Dni" />
                            <EditText
                                android:layout_marginRight="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:background="@color/black_overlay"
                                android:inputType="numberSigned"
                                android:ems="6"
                                android:textSize="19dp"
                                android:id="@+id/txClieDni"
                                android:textIsSelectable="true" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="10dp"
                                android:textColor="@color/colorWhite"
                                android:textSize="19dp"
                                android:id="@+id/lbClieSexo"
                                android:text="Sexo" />
                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:background="@color/black_overlay"
                                android:inputType="text"
                                android:ems="7"
                                android:textSize="19dp"
                                android:id="@+id/txClieSexo"
                                android:textIsSelectable="true" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="15dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="10dp"
                                android:textColor="@color/colorWhite"
                                android:textSize="19dp"
                                android:id="@+id/lbClieECivil"
                                android:text="ECivil" />
                            <EditText
                                android:layout_marginRight="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:background="@color/black_overlay"
                                android:inputType="text"
                                android:textSize="19dp"
                                android:ems="6"
                                android:id="@+id/txClieECivil"
                                android:textColorHint="@color/colorWhite"
                                android:textIsSelectable="true" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="10dp"
                                android:textColor="@color/colorWhite"
                                android:textSize="19dp"
                                android:id="@+id/lbClieFono"
                                android:text="Telefono" />
                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:background="@color/black_overlay"
                                android:inputType="phone"
                                android:ems="8"
                                android:textSize="19dp"
                                android:id="@+id/txClieFono"
                                android:textColorHint="@color/colorWhite"
                                android:textIsSelectable="true" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:textColor="@color/colorWhite"
                        android:textSize="19dp"
                        android:id="@+id/lbClieCorreo"
                        android:text="Correo" />
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:background="@color/black_overlay"
                        android:inputType="textEmailAddress"
                        android:ems="14"
                        android:textSize="19dp"
                        android:id="@+id/txClieCorreo"
                        android:textColorHint="@color/colorWhite"
                        android:textIsSelectable="true" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:textColor="@color/colorWhite"
                        android:textSize="19dp"
                        android:id="@+id/lbClieFacebook"
                        android:text="Facebook" />
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:background="@color/black_overlay"
                        android:inputType="text"
                        android:ems="12"
                        android:textSize="19dp"
                        android:id="@+id/txClieFacebook"
                        android:textColorHint="@color/colorWhite"
                        android:textIsSelectable="true" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:textColor="@color/colorWhite"
                        android:textSize="19dp"
                        android:id="@+id/lbClieClave"
                        android:text="Clave" />
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:background="@color/black_overlay"
                        android:inputType="text"
                        android:ems="10"
                        android:textSize="19dp"
                        android:id="@+id/txClieClave"
                        android:textColorHint="@color/colorWhite"
                        android:textIsSelectable="true" />
                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="0.1">
                <Button
                    android:layout_height="wrap_content"
                    android:id="@+id/bnClieGrabar"
                    android:text="Grabar"
                    android:background="@drawable/buttonface"
                    android:layout_width="110dp"
                    android:gravity="center" />
                <Button
                    android:layout_width="54dp"
                    android:layout_height="52dp"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:background="@drawable/goback"
                    android:id="@+id/bnClieBack"
                    android:text=""
                    android:layout_marginLeft="15dp" />
            </LinearLayout>
        </LinearLayout>
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleX="0.4"
            android:scaleY="0.4"
            android:visibility="invisible"
            android:id="@+id/pbSubscribePBar"/>
    </RelativeLayout>
</FrameLayout>
